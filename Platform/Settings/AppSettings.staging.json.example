{
  "ConnectionStrings": {
    "DefaultConnection": "",
    "AzureServiceBusKey": "",
    "AzureRedisCache": ""
  },
  "EncryptKey": {
    "DefaultKey": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    // Azure Cloud instance among:
    // - AzurePublic (see https://aka.ms/aaddevv2). This is the default value
    // - AzureUsGovernment (see https://docs.microsoft.com/azure/azure-government/documentation-government-developer-guide)
    // - AzureChina (see https://docs.microsoft.com/azure/china/china-get-started-developer-guide)
    // - AzureGermany (See https://docs.microsoft.com/azure/germany/germany-developer-guide)
    "AzureCloudInstance": "AzurePublic",

    // Azure AD Audience among:
    // - AzureAdMyOrg (single tenant: you need to also provide the TenantId
    // - AzureAdMultipleOrgs (multi-tenant): Any work and school accounts
    // - AzureAdAndPersonalMicrosoftAccount (any work and school account or Microsoft personal account)
    // - PersonalMicrosoftAccount (Microsoft personal account only)
    "AadAuthorityAudience": "AzureAdMyOrg",

    // ClientId (ApplicationId) as copied from the application registration (which depends on the cloud instance)
    // See docs referenced in the AzureCloudInstance section above
    "ClientId": "",
    "ClientSecret": "",
    "LocalLogin": {
      "Endpoint": "",
      "Username": "",
      "Password": ""
    }
  },

  // Web API. Here Microsoft Graph. The endpoint is different depending on the cloud instance
  // (See docs referenced in the "AzureCloudInstance" section above.
  "WebAPI": {
    "MicrosoftGraphBaseEndpoint": "https://graph.microsoft.com"
  },
  "JsReportingServices": {
    "Username": null,
    "Password": null,
    "Url": ""
  },
  "AzureBlobStorage": {
    "DefaultConnection": ""
  },
  "DefaultConfigs": {
    "DefaultRole": "default-user",
    "Page": "1",
    "Take": "3000",
    "MaxTake": "3000",
    "TimezoneHandle": true,
    "DateFormats": [
      "MM/dd/yyyy",
      "MM/dd/yyyy HH:mm",
      "MM/dd/yyyy HH:mm:ss",
      "M/d/yyyy HH:mm:ss",
      "M/dd/yyyy h:mm:ss tt",
      "M/d/yyyy h:mm:ss tt"
    ],
    "ReportsEndpoint": "/api/isite/v1/export",
    "ReportFormats": [
      "xlsx",
      "pdf",
      "csv"
    ],
    "EnableAzureADAuthentication": false,
    "Caching": {
      "ActiveProvider": "AzureRedis",
      "Enabled": true,
      "TimeAmmount": 2592000
    },
    "Messaging": {
      "ActiveProvider": "AzureServiceBus"
  },
    "Validator": {
      "HttpResponseOnfail": 409
    }
  },
  "SocialAuth": {
    "Microsoft": {
      "Tenant-Id": ""
    }
  },
  "Jwt": {
    "Key": "",
    "Issuer": "JWTAuthenticationServer",
    "Audience": "JWTServicePostmanClient",
    "Subject": "JWTServiceAccessToken",
    "Duration": 10000
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "",
    "TenantId": "",
    "ClientId": "",
    //scopes examples: User.Read offline_access
    "Scopes": ""
  },
  "FlyawareMetrics": {
    "UseToken": true
  },
  "App": {
    "Version": "1.0.0",
    //env available; dev, staging, prod
    "Environment": "dev"
  }
}
